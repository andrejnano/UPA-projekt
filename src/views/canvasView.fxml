<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.shape.Rectangle?>
<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CanvasController">
    <BorderPane>
        <top>
            <ToolBar prefHeight="40.0" prefWidth="900.0">
                <items>
                    <Button fx:id="createPoint" mnemonicParsing="false" onAction="#createPoint" text="Insert points" />
                    <Button fx:id="createPolyLine" mnemonicParsing="false" onAction="#createPolyLine" text="Insert polyline" />
                    <Button fx:id="createPolygonButton" mnemonicParsing="false" onAction="#createArea" text="Insert polygons" />
                    <Button fx:id="editButton" mnemonicParsing="false" onAction="#editMode" text="Edit Mode" />
                    <Button fx:id="clearCanvasButton" mnemonicParsing="false" onAction="#clearCanvas" style="-fx-background-color: red;" text="Clear Canvas" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                    <Label fx:id="canvasLabel" prefHeight="17.0" prefWidth="477.0" text="This is canvasView">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                </items>
            </ToolBar>
        </top>
        <center>
            <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" vbarPolicy="NEVER" maxHeight="560.0" maxWidth="600.0">
                <content>
                    <Pane fx:id="pane" minHeight="2240" minWidth="2400.0"  maxHeight="2240" maxWidth="2400.0" style="-fx-background-color: white"/>
                </content>
            </ScrollPane>
        </center>
        <right>
            <AnchorPane fx:id="sideBar" prefHeight="600.0" maxWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
                <fx:include fx:id="idShapeEdit" source="shapeEdit.fxml" />
            </AnchorPane>
        </right>
      </BorderPane>
</AnchorPane>
