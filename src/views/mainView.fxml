        </Tab>
        <Tab text="Manage map" fx:id="manageMapTab">
            <content>
                <fx:include source="canvasView.fxml" />
            </content>
        </Tab>
        <Tab text="Search for offers" fx:id="searchTab">
            <content>
                <fx:include source="searchView.fxml" />
